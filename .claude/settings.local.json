{
  "permissions": {
    "allow": [
      "mcp__*",
      "Skill(*)",
      "Bash(./gradlew *)",
      "Bash(npm run *)",
      "Bash(npm test*)",
      "Bash(npm install*)",
      "Bash(npx *)",
      "Bash(gh *)",
      "Bash(docker exec:*)",
      "Bash(xargs docker stop:*)",
      "Bash(xargs docker rm:*)",
      "Bash(PGPASSWORD=devpassword psql:*)",
      "Bash(PGPASSWORD=worklog psql:*)",
      "Bash(python3:*)",
      "Bash(pgrep:*)",
      "Bash(pkill:*)",
      "Bash(kill:*)",
      "Bash(lsof:*)",
      "Bash(chmod:*)",
      "Bash(command:*)",
      "Bash(bc:*)",
      "Bash(htpasswd:*)",
      "Bash(pip3 install:*)",
      "Bash(xargs:*)",
      "Bash(.specify/scripts/*)",
      "Bash(~/.claude/hooks/notify-windows.sh)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:plugins.gradle.org)",
      "WebFetch(domain:detekt.dev)",
      "WebFetch(domain:docs.spring.io)",
      "WebFetch(domain:kotlinlang.org)",
      "WebFetch(domain:nextjs.org)",
      "WebFetch(domain:react.dev)",
      "WebFetch(domain:vitest.dev)",
      "WebFetch(domain:biomejs.dev)",
      "Bash(git status)",
      "Bash(git status *)",
      "Bash(git log *)",
      "Bash(git diff)",
      "Bash(git diff *)",
      "Bash(git show *)",
      "Bash(git blame *)",
      "Bash(git reflog *)",
      "Bash(git rev-parse *)",
      "Bash(git ls-files *)",
      "Bash(git ls-remote *)",
      "Bash(git branch)",
      "Bash(git branch *)",
      "Bash(git checkout *)",
      "Bash(git switch *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git push)",
      "Bash(git push *)",
      "Bash(git pull)",
      "Bash(git pull *)",
      "Bash(git fetch)",
      "Bash(git fetch *)",
      "Bash(git merge *)",
      "Bash(git rebase *)",
      "Bash(git cherry-pick *)",
      "Bash(git revert *)",
      "Bash(git stash)",
      "Bash(git stash *)",
      "Bash(git tag)",
      "Bash(git tag *)",
      "Bash(git remote *)",
      "Bash(git worktree *)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/git-safety-check.sh",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/sensitive-file-guard.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/format-on-edit.sh",
            "timeout": 15
          },
          {
            "type": "command",
            "command": ".claude/hooks/auto-test-on-edit.sh",
            "timeout": 45
          }
        ]
      }
    ]
  }
}
